<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ControladorTranslate">
   <children>
      <TextArea fx:id="escribe" maxHeight="135.0" promptText="Escribe en cualquier idioma" wrapText="true">
         <font>
            <Font size="16.0" />
         </font>
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
         </VBox.margin></TextArea>
      <Button fx:id="translate" onAction="#translateText" text="Traducir al" />
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <RadioButton fx:id="espanol" onAction="#cambiarBoton" selected="true" text="EspaÃ±ol">
               <toggleGroup>
                  <ToggleGroup fx:id="languajes" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="english" onAction="#cambiarBoton" text="English" toggleGroup="$languajes" />
         </children>
      </HBox>
      <Label fx:id="traduccion" wrapText="true">
         <font>
            <Font size="16.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </VBox.margin></Label>
   </children>
</VBox>
