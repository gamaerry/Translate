<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import traductor.DarkButton?>
<GridPane fx:id="raiz" prefHeight="400.0" prefWidth="750" xmlns="http://javafx.com/javafx/11.0.2"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="traductor.TranslateController">
    <columnConstraints>
        <ColumnConstraints hgrow="never" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="never" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints fillHeight="false" minHeight="0" prefHeight="100" vgrow="never"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <TextArea fx:id="escribe" promptText="Escribe en cualquier idioma" wrapText="true" GridPane.columnSpan="3">
        <font>
            <Font size="16.0"/>
        </font>
        <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </BorderPane.margin>
        <GridPane.margin>
            <Insets left="15.0" right="15.0" top="15.0"/>
        </GridPane.margin>
    </TextArea>
    <GridPane alignment="CENTER" hgap="20.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="75.0" vgap="20.0" BorderPane.alignment="TOP_CENTER"
              GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER"
              GridPane.vgrow="NEVER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button fx:id="translate" alignment="CENTER" contentDisplay="CENTER" onAction="#translateText"
                text="Traducir al" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
        <RadioButton fx:id="espanol" onAction="#cambiarBoton" selected="true" text="EspaÃ±ol" GridPane.halignment="RIGHT"
                     GridPane.rowIndex="1">
            <toggleGroup>
                <ToggleGroup fx:id="languajes"/>
            </toggleGroup>
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </RadioButton>
        <RadioButton fx:id="english" onAction="#cambiarBoton" text="English" toggleGroup="$languajes"
                     GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </RadioButton>
        <GridPane.margin>
            <Insets/>
        </GridPane.margin>
    </GridPane>
    <DarkButton fx:id="dark" onMouseClicked="#cambiarTema"
                GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
    <Label fx:id="traduccion" onMouseClicked="#hacerSeleccionable" onMouseDragged="#hacerSeleccionable"  wrapText="true"
           GridPane.columnSpan="3" GridPane.rowIndex="2" GridPane.valignment="TOP">
        <font>
            <Font size="16.0"/>
        </font>
        <GridPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0"/>
        </GridPane.margin>
    </Label>
</GridPane>
